{
  "info": {
    "_postman_id": "auth-reg-verify-001",
    "name": "MyCrypto Platform - User Registration & Email Verification",
    "description": "Complete API tests for Story 1.1 (User Registration) and Story 1.2 (Email Verification)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Registration - Valid",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Test: POST /api/v1/auth/register - Success",
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Response has success structure', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.equal(true);",
              "    pm.expect(jsonData.message).to.include('başarılı');",
              "    pm.expect(jsonData.data).to.have.property('userId');",
              "    pm.expect(jsonData.data).to.have.property('email');",
              "    pm.expect(jsonData.data.emailVerified).to.equal(false);",
              "});",
              "",
              "pm.test('User email is set correctly', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data.email).to.equal('testuser001@example.com');",
              "});",
              "",
              "pm.test('Response has meta information', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.meta).to.have.property('timestamp');",
              "    pm.expect(jsonData.meta).to.have.property('request_id');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser001@example.com\",\n  \"password\": \"SecurePass123!@#\",\n  \"terms_accepted\": true,\n  \"kvkk_consent_accepted\": true,\n  \"recaptchaToken\": \"mock-token-with-score-0.8\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/auth/register",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "auth",
            "register"
          ]
        }
      }
    },
