              "    pm.expect(jsonData.error.code).to.equal('VALIDATION_ERROR');",
              "    pm.expect(jsonData.error.details).to.be.an('array');",
              "    pm.expect(jsonData.error.details[0].field).to.equal('email');",
              "});"
            ]
          }
        }
