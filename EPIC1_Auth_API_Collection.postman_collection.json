                  "// Save secret for TOTP generation",
                  "var jsonData = pm.response.json();",
                  "pm.environment.set('totp_secret', jsonData.data.secret);",
                  "pm.environment.set('backup_codes', JSON.stringify(jsonData.data.backupCodes));"
                ]
