  "item": [
    {
      "name": "Setup",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/markets/BTC-USDT/ticker",
              "host": ["{{base_url}}"],
              "path": ["markets", "BTC-USDT", "ticker"]
            }
          }
        }
      ]
    },
    {
      "name": "TC-001: Market Order Full Fill",
      "item": [
        {
          "name": "User A - Place Limit Sell 1.0 BTC @ 50000",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-User-ID",
                "value": "{{user_a_id}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"symbol\": \"BTC-USDT\",\n  \"side\": \"SELL\",\n  \"type\": \"LIMIT\",\n  \"quantity\": \"1.0\",\n  \"price\": \"50000.00\",\n  \"time_in_force\": \"GTC\",\n  \"client_order_id\": \"tc001-sell-{{$timestamp}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders",
              "host": ["{{base_url}}"],
              "path": ["orders"]
            }
          }
        },
        {
          "name": "User B - Place Market Buy 1.0 BTC",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-User-ID",
                "value": "{{user_b_id}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"symbol\": \"BTC-USDT\",\n  \"side\": \"BUY\",\n  \"type\": \"MARKET\",\n  \"quantity\": \"1.0\",\n  \"client_order_id\": \"tc001-buy-{{$timestamp}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders",
              "host": ["{{base_url}}"],
              "path": ["orders"]
            }
          }
        },
        {
          "name": "Get Recent Trades",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/trades?symbol=BTC-USDT&limit=5",
              "host": ["{{base_url}}"],
              "path": ["trades"],
              "query": [
                {
                  "key": "symbol",
                  "value": "BTC-USDT"
                },
                {
                  "key": "limit",
                  "value": "5"
                }
              ]
            }
          }
        }
      ]
