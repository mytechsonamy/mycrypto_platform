{
  "dashboard": {
    "title": "Trade Engine - System Health",
    "tags": ["health", "system", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "System Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"trade-engine\"}",
            "legendFormat": "Status"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 2,
        "title": "Active WebSocket Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(trade_engine_active_connections)",
            "legendFormat": "Connections"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Pending Settlements",
        "type": "stat",
        "targets": [
          {
            "expr": "trade_engine_pending_settlements",
            "legendFormat": "Pending"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Error Rate (per minute)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(trade_engine_errors_total[1m]))",
            "legendFormat": "Errors/min"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "options": {
          "colorMode": "background",
          "thresholds": [
            {"value": 0, "color": "green"},
            {"value": 1, "color": "yellow"},
            {"value": 10, "color": "red"}
          ]
        }
      },
      {
        "id": 5,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "trade_engine_database_connections{state=\"active\"}",
            "legendFormat": "Active"
          },
          {
            "expr": "trade_engine_database_connections{state=\"idle\"}",
            "legendFormat": "Idle"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 6,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(trade_engine_http_requests_total[5m])) by (method)",
            "legendFormat": "{{method}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 7,
        "title": "HTTP Request Duration (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(trade_engine_http_request_duration_seconds_bucket[5m])) by (le, path))",
            "legendFormat": "{{path}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 8,
        "title": "Settlement Latency (p99)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, sum(rate(trade_engine_settlement_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "p99"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(trade_engine_settlement_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(trade_engine_settlement_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "p50"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      },
      {
        "id": 9,
        "title": "Cache Hit Ratio",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(trade_engine_cache_hits_total[5m]) / (rate(trade_engine_cache_hits_total[5m]) + rate(trade_engine_cache_misses_total[5m]))",
            "legendFormat": "Hit Ratio"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20}
      },
      {
        "id": 10,
        "title": "Errors by Component",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(trade_engine_errors_total[5m])) by (component)",
            "legendFormat": "{{component}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20}
      },
      {
        "id": 11,
        "title": "Settlement Status",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(trade_engine_settlements_processed_total) by (status)",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 28}
      },
      {
        "id": 12,
        "title": "WebSocket Messages Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(trade_engine_websocket_messages_total[5m])) by (direction)",
            "legendFormat": "{{direction}}"
          }
        ],
        "gridPos": {"h": 8, "w": 16, "x": 8, "y": 28}
      }
    ]
  }
}
