        {
          "name": "TC-017: Cache Hit - Second Request (Immediate)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/v1/market/orderbook/BTC_TRY",
              "protocol": "http",
