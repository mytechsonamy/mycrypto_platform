        {
          "name": "TC-005: Verify Spread Calculation",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/v1/market/orderbook/BTC_TRY",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8080",
              "path": [
                "api",
                "v1",
                "market",
                "orderbook",
                "BTC_TRY"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Spread is calculated correctly', function() {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.bids.length > 0 && jsonData.asks.length > 0) {",
                  "        var bestBid = parseFloat(jsonData.bids[0].price);",
                  "        var bestAsk = parseFloat(jsonData.asks[0].price);",
                  "        var expectedSpread = bestAsk - bestBid;",
                  "        var actualSpread = parseFloat(jsonData.spread);",
                  "        pm.expect(Math.abs(actualSpread - expectedSpread)).to.be.below(0.01);",
                  "    }",
                  "});",
                  "",
                  "pm.test('Spread is positive (asks >= bids)', function() {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(parseFloat(jsonData.spread)).to.be.gte(0);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "TC-Sorting: Verify Bid/Ask Ordering",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/v1/market/orderbook/BTC_TRY?depth=20",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8080",
              "path": [
                "api",
                "v1",
                "market",
                "orderbook",
                "BTC_TRY"
              ],
              "query": [
                {
                  "key": "depth",
                  "value": "20"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Bids are sorted descending by price', function() {",
                  "    var jsonData = pm.response.json();",
                  "    for (var i = 0; i < jsonData.bids.length - 1; i++) {",
                  "        var current = parseFloat(jsonData.bids[i].price);",
                  "        var next = parseFloat(jsonData.bids[i + 1].price);",
                  "        pm.expect(current).to.be.gte(next);",
                  "    }",
                  "});",
                  "",
                  "pm.test('Asks are sorted ascending by price', function() {",
                  "    var jsonData = pm.response.json();",
                  "    for (var i = 0; i < jsonData.asks.length - 1; i++) {",
                  "        var current = parseFloat(jsonData.asks[i].price);",
                  "        var next = parseFloat(jsonData.asks[i + 1].price);",
                  "        pm.expect(current).to.be.lte(next);",
                  "    }",
                  "});"
                ]
              }
            }
          ]
        }
