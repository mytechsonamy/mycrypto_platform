              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Second request succeeds', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Second request is faster than first (cache hit)', function() {",
                  "    var responseTime2 = pm.response.responseTime;",
